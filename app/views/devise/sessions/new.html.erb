<div class="max-w-md mx-auto bg-white p-6">
  <h2 class="text-2xl mt-8 text-center text-gray-800 mb-8">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: true, class: 'space-y-4' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        class: "mt-1 block w-full border-b border-gray-300 focus:border-primary focus:ring-0 outline-none text-gray-900"
      %>
      <% if resource.errors[:email].any? %>
        <div class="text-red-400">
          <% resource.errors[:email].each do |error| %>
            <p><%= error %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
      <%= f.password_field :password,
        autocomplete: "current-password",
        class: "mt-1 block w-full border-b border-gray-300 focus:border-primary focus:ring-0 outline-none text-gray-900"
      %>
      <% if resource.errors[:password].any? %>
        <div class="text-red-400">
          <% resource.errors[:password].each do |error| %>
            <p><%= error %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="actions flex justify-center items-center">
      <%= render "devise/shared/button", text: "ログインする", path: session_path(resource_name), method: :post, extra_classes: "w-[232px]" %>
    </div>
  <% end %>

  <div class="actions flex justify-center items-center">
    <%= render "devise/shared/button", text: "新規登録", path: new_registration_path(resource_name), method: :get, extra_classes: "w-[232px] mt-4" %>
  </div>
</div>
