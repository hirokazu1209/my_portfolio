<div class="flex items-center justify-center min-h-screen bg-white">
  <div class="w-[1000px] flex justify-center">
    <!-- 4:6 のレイアウト -->
    <div class="w-5/12 flex flex-col items-center p-4">
      <!-- 画像部分 -->
      <a href="/profile/edit" class="w-80 h-80 rounded-full bg-gray-300 flex items-center justify-center cursor-pointer overflow-hidden hover:opacity-75">
        <% if @user.profile_picture_pass.present? %>
          <img src="<%= @user.profile_picture_pass %>" alt="Profile Image" class="w-full h-full object-cover rounded-full">
        <% else %>
          <span class="text-gray-500 text-md">未選択</span>
        <% end %>
      </a>

      <!-- 氏名部分 -->
      <p class="mt-4 text-lg font-semibold w-full text-center">
        <%= @user.name.present? ? @user.name : "未入力です" %>
      </p>
    </div>

    <div class="w-10/12 flex flex-col p-4">
      <!-- タイトル -->
      <h2 class="block text-2xl mt-8 border-b-2 border-gray-300 mb-8">自己紹介</h2>

      <!-- テキスト部分 -->
      <p class="mb-4 text-lg w-full">
        <%= @user.self_introduction.present? ? @user.self_introduction : "未入力です" %>
      </p>

      <!-- ボタン部分 -->
      <div class="actions flex items-center">
        <%= render "devise/shared/button", text: "自己紹介を編集する", path: "#", method: :get, extra_classes: "w-[232px] mt-4" %>
      </div>
    </div>
  </div>
</div>