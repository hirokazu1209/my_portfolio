<div class="items-center justify-center min-h-screen bg-white">
  <div class="p-4 bg-white shadow-md rounded-md">
    <select id="month-select" class="mt-2 w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-300">
    </select>
  </div>
  <script>
    function getPastTwoMonths() {
      const months = [];
      const today = new Date();
      for (let i = -2; i <= 0; i++) {
        const date = new Date(today.getFullYear(), today.getMonth() + i, 1);
        const monthText = `${date.getMonth() + 1}月`; // 年を削除
        months.unshift({ value: `${date.getMonth() + 1}`, text: monthText }); // unshift() で降順に
      }
      return months;
    }

    function populateDropdown() {
      const select = document.getElementById("month-select");
      const months = getPastTwoMonths();

      months.forEach(month => {
        const option = document.createElement("option");
        option.value = month.value;
        option.textContent = month.text;
        select.appendChild(option);
      });
    }

    populateDropdown();
  </script>

  <div class="items-center justify-center min-h-screen bg-white">
    <div class="flex justify-center">
      <div class="w-[1000px]">
        <div class=" p-4 bg-white rounded-lg shadow-md dark:bg-gray-800">
            <div class="flex items-center justify-between">
              <h2 class="w-[200px] underline bold">バックエンド</h2>
              <div class="actions flex items-center justify-center mt-0 py-4">
                <%= render "shared/button", text: "項目を追加する", path: "#", method: :get, extra_classes: "mt-0 w-[180px]" %>
              </div>
            </div>
            <!-- テーブルコンポーネント -->
            <div class="w-full border border-slate-200 rounded-xl">
              <table class="w-full divide-y divide-slate-200">
                <thead class="text-slate-800">
                  <tr>
                    <th class="px-4 py-2 text-start">項目名</th>
                    <th class="px-4 py-2 text-start">学習時間</th>
                    <th class="px-4 py-2 text-start"></th>
                    <th class="px-4 py-2 text-start"></th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 bg-white text-slate-80">
                  <tr>
                    <td class="px-4 py-4 w-[180px]">Ruby</td>
                    <td class="px-4 py-4 w-[180px]">
                      <input type="number" list="number-options" min="1" max="180" class="w-full border rounded px-2 py-2" />
                    </td>
                    <td class="actions py-4 text-center items-center justify-center w-[180px]">
                      <%= render "shared/button", text: "学習時間を保存する", path: "#", method: "#", extra_classes: "bg-white text-[#1B5678] border border-primary w-[180px]" %>
                    </td>
                    <td class="actions py-4 text-center items-center justify-center w-[180px]">
                      <%= render "shared/button", text: "削除する", path: "#", method: "#", extra_classes: "bg-secondary w-[180px]" %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>